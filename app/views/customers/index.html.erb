<!DOCTYPE html>
<html>
  <head>
    <title>PETTRA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
		<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
			<%= image_tag 'image.png', class: "tops_field" %>
			<a class="navbar-brand" href="tops">Home</a>
			<a class="navbar-brand" href="#">About</a>
			<a class="navbar-brand" href="#">Features</a>
			<a class="navbar-brand" href="#">Princing</a>
			<a class="navbar-brand" href="#">Contact us</a>
		</div>
</nav>

  </header>
<h1>顧客情報</h1>
<table class="table table-hover">
  <tr>
    <th>カルテ番号</th>
    <th>動物大分類</th>
    <th>動物小分類</th>
    <th>名前</th>
    <th>最終来院日</th>
  </tr>
<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.medical_record_number %></td>
    <td><%= customer.animal_major_classification %></td>
    <td><%= customer.animal_subcategory %></td>
    <td><%= customer.name %></td>
    <td><%= customer.last_visit_date %></td>

  </tr>
<% end %>
</table>
