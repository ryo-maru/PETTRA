<!DOCTYPE html>
<html>
  <head>
    <title>PETTRA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
		<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
		<%= image_tag 'image.png', class: "tops_field" %>
			<a class="navbar-brand" href="tops">Home</a>
			<a class="navbar-brand" href="#">About</a>
			<a class="navbar-brand" href="#">Features</a>
			<a class="navbar-brand" href="#">Princing</a>
			<a class="navbar-brand" href="#">Contact us</a>
		</div>

</nav>

  </header>

<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <th nowrap>動物分類</th>
      <th>病名</th>
      <th>症状</th>
      <th>症例</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |desease| %>
      <tr>
        <td><%= desease.animal_category %></td>
        <td><%= desease.disease %></td>
        <td nowrap><%= desease.sym_part %></td>
        <td><%= desease.symptom %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Top', diseases_path %>
